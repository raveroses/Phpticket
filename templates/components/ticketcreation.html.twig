{%  set list = ["Open", "Close", "In progress"] %}
{% set currentStatus = "Open" %}
{# {% set isOpen="" %} #}
   <section>
      <h2>Create your Ticket</h2>

      <form class="signupForm">
        <div>
          <label htmlFor="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
             value="{{ticketCreation.title}}"
          />
        </div>
        <div>
          <label htmlFor="description">Description</label>
          <input
            type="text"
            id="description"
            name="description"
            value="{{ticketCreation.description}}"
          />
        </div>
        <div>
          <select
            name="status"
            id="status"
            value="{{ticketCreation.status}}"
          >
    {% for eachList in list%}
    <option value="{{eachList}}" "{{eachList == currentStatus ? "selected" : "" }}" >
    {{eachList}}
    </option>
    {% endfor %}
          </select>
        </div>
        <div>
          <button type="button" id="createBtn">Create</button>
        </div>
      </form>
    </section>


