{% set user = {
  fullName: "",
  email: "",
  password: ""
} %}
    {# <form class="signupForm" onSubmit={handleSubmit()}> #}
    <form class="signupForm">
      <div>
        <label for="fullName">Full Name</label>
        <input
          type="text"
          id="fullName"
          name="fullName"
          value="{{user.fullName}}"
          {# onChange={handleUserOnchange} #}
        />
      </div>
      <div>
        <label for="email">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          value="{{user.email}}"
          {# onChange={handleUserOnchange} #}
        />
      </div>
      <div>
        <label for="Password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          value="{{user.password}}"
          {#onChange={handleUserOnchange} #}
        />
      </div>

      <div>
        <button type="submit">Sign Up</button>
      </div>
    </form>

<script>
const form= document.querySelector("form");
const userInput = document.querySelectorAll("form div input")

let user;
    
const signUpValueRetrievalue= localStorage.getItem("store");
if(signUpValueRetrievalue){
 user= JSON.parse(signUpValueRetrievalue)
}else{
  user={
     fullName: "",
        email: "",
        password: "",
  }
}


const handleUserOnchange = (e) => {
const { name, value } = e.target;
user[name]=value;
console.log(user)
};



const handleSubmission= (e)=>{
  e.preventDefault();
  
    if (!user.fullName || !user.email || !user.password) {
      alert("Please, check your fields");
      return;
    }

    localStorage.setItem("store", JSON.stringify(user));
    alert("Account created successfully");

       setTimeout(() => {
       window.location.href ="index.php?page=login"
    },1000);

    user = {
      fullName: "",
      email: "",
      password: "",
    };
 
}



userInput.forEach(input  => {
 return  input.addEventListener("change",handleUserOnchange)
})
form.addEventListener("submit",handleSubmission)




