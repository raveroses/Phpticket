{% set safeList = ticketCreationList is defined and ticketCreationList is iterable ? ticketCreationList : [] %}

{% set totalTickets = safeList|length %}
{% set openTickets = safeList|filter(item => item.status == "open")|length %}
{% set resolvedTickets = safeList|filter(item => item.status == "closed")|length %}

{% set statuslist = [
    { label: "Total Tickets", value: totalTickets },
    { label: "Open Tickets", value: openTickets },
    { label: "Resolved Tickets", value: resolvedTickets }
] %}

    <section class="status-list">
      {% for status in statuslist%}
        <div  class="status-item">
          <p>{{status.label}}</p>
          <h3>{{status.value}}</h3>
        </div>
  {% endfor %}
    </section>





